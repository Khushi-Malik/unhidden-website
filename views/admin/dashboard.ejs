<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">Add New Post</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>

            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>    

            <div class="admin-post-actions">
                <a href="/edit-post/<%= post._id %>" class="edit-button">Edit</a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <button type="submit" onclick="return confirm('Delete this post?')" style="border: none; border-radius: none; background-color: #f7fafc; font-size: 1rem; color: #ff4c4c; cursor: pointer; ">
                        Delete
                    </button>
                </form>
            </div>

        </li>
    <% }) %>
</ul>